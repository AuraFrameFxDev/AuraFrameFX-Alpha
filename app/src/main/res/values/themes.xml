<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for Material 3 -->
    <style name="Theme.AuraFrameFX" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorOnPrimary">@color/light_on_primary</item>
        <item name="colorPrimaryContainer">@color/light_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/light_on_primary_container</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/light_secondary</item>
        <item name="colorOnSecondary">@color/light_on_secondary</item>
        <item name="colorSecondaryContainer">@color/light_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/light_on_secondary_container</item>

        <!-- Tertiary colors -->
        <item name="colorTertiary">@color/light_tertiary</item>
        <item name="colorOnTertiary">@color/light_on_tertiary</item>
        <item name="colorTertiaryContainer">@color/light_tertiary_container</item>
        <item name="colorOnTertiaryContainer">@color/light_on_tertiary_container</item>

        <!-- Error colors -->
        <item name="colorError">@color/light_error</item>
        <item name="colorOnError">@color/light_on_error</item>
        <item name="colorErrorContainer">@color/light_error_container</item>
        <item name="colorOnErrorContainer">@color/light_on_error_container</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/light_background</item>
        <item name="colorOnBackground">@color/light_on_background</item>
        <item name="android:windowBackground">@color/light_background</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/light_surface</item>
        <item name="colorOnSurface">@color/light_on_surface</item>
        <item name="colorSurfaceVariant">@color/light_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/light_on_surface_variant</item>
        
        <!-- Outline colors -->
        <item name="colorOutline">@color/light_outline</item>
        <item name="colorOutlineVariant">@color/light_outline_variant</item>

        <!-- Status and Navigation bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:enforceNavigationBarContrast">false</item>
        <item name="android:enforceStatusBarContrast">false</item>
        <item name="android:navigationBarDividerColor">@android:color/transparent</item>

        <!-- Material 3 specific -->
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:colorControlHighlight">@color/neon_teal_transparent</item>
        <item name="android:colorControlActivated">@color/neon_teal</item>
        <item name="android:colorControlNormal">@color/light_on_surface_variant</item>

        <!-- Material 3 shape appearance -->
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.AuraFrameFX.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.AuraFrameFX.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearance.AuraFrameFX.LargeComponent
        </item>
        
        <!-- Add missing attributes -->
        <item name="materialButtonStyle">@style/Widget.AuraFrameFX.Button</item>
        <item name="materialCardViewStyle">@style/Widget.AuraFrameFX.CardView</item>
        <item name="chipStyle">@style/Widget.AuraFrameFX.Chip</item>
        <item name="textInputStyle">@style/Widget.AuraFrameFX.TextInputLayout</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.AuraFrameFX.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
        <item name="cornerSizeSmall">4dp</item>
        <item name="cornerSizeMedium">4dp</item>
        <item name="cornerSizeLarge">4dp</item>
    </style>

    <style name="ShapeAppearance.AuraFrameFX.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
        <item name="cornerSizeSmall">8dp</item>
        <item name="cornerSizeMedium">8dp</item>
        <item name="cornerSizeLarge">8dp</item>
    </style>

    <style name="ShapeAppearance.AuraFrameFX.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
        <item name="cornerSizeSmall">12dp</item>
        <item name="cornerSizeMedium">12dp</item>
        <item name="cornerSizeLarge">12dp</item>
    </style>
    
    <!-- Widget Styles -->
    <style name="Widget.AuraFrameFX.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/light_on_primary</item>
        <item name="backgroundTint">@color/light_primary</item>
        <item name="rippleColor">@color/neon_teal_transparent</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <style name="Widget.AuraFrameFX.CardView" parent="Widget.Material3.CardView">
        <item name="cardBackgroundColor">@color/light_surface</item>
        <item name="cardElevation">1dp</item>
        <item name="cardMaxElevation">2dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
    
    <style name="Widget.AuraFrameFX.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/light_surface_variant</item>
        <item name="chipStrokeColor">@color/light_outline</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="android:textColor">@color/light_on_surface</item>
        <item name="android:checkable">false</item>
        <item name="closeIconTint">@color/light_on_surface_variant</item>
    </style>
    
    <style name="Widget.AuraFrameFX.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/light_outline</item>
        <item name="boxStrokeErrorColor">@color/light_error</item>
        <item name="hintTextColor">@color/light_on_surface_variant</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>
</resources>
